@page
@using System.Linq
@model BookListRazor.Pages.BookList.IndexModel
@{
    ViewData["Title"] = "Book List";
}

<script>
    const confirmDelete = () => confirm("Are you sure you want to delete this book?");
</script>

<div class="container row p-0 m-0">
    <div class="col-10">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-2">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Any())
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().ISBN"></label>
                        </th>
                        <th>
                            <label>Actions</label>
                        </th>
                    </tr>
                    @foreach (var book in Model.Books)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => book.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(model => book.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(model => book.ISBN)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@book.Id" class="btn btn-danger btn-sm" onclick="return confirmDelete()">Delete</button>
                                <a asp-page="Edit" asp-route-id="@book.Id" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Books available.</p>
            }
        </form>
    </div>
</div>